    <%- include('include/header.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    <title>my cart</title>
</head>
<body>
    <!--! include nav here-->
    <%- include('include/nav-bar') %>

    <!--! cart container-->
    <div class="my-cart-container">
        <div class="cart">
            <h1>my cart</h1>
            <a href="">continue to check out</a>
        </div>
        <!--! product cart-->
        <div class="cart-products">
            <img src="/pictures/wood monitor 2.png" alt="">
            <div class="product-info">
                <h4>wood monitor stand</h4>
                <h4>material: walnut</h4>
                <div class="counter">
                    <h4>quantity:</h4>
                    <span class="down" onclick="decreaseCount(event, this)">
                        -
                    </span>
                    <input type="text" value="1">
                    <span class="up" onclick="increaseCount(event, this)">
                        +
                    </span>
                </div>
                <h4 class="shipping">ships by 2/27/2023</h4>
            </div>
            <!--! actions-->
            <div class="action">
                <h4>$155</h4>
                <a href="">remove</a>
            </div>
        </div>
        <!--! total price-->
        <div class="total">
            <div>
                <h2>total $355</h2>
            </div>
        </div>
    </div>
<!--! include blue section here-->
<%- include('include/blue-section') %>

<!--! include footer here-->
<%- include('include/footer') %>
